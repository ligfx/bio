	paper.path("M71 0L120 0").attr({
		"stroke": "red",
		"stroke-width": 5
	});
	paper.path("M0 151L0 199").attr({
		"stroke": "red",
		"stroke-width": 5
	});
	paper.path("M71 0L71 200").attr({
		"stroke": "#ddd",
		"stroke-width": 2,
		"stroke-dasharray": "-"
	});
	paper.path("M0 151L120 151").attr({
		"stroke": "#ddd",
		"stroke-width": 2,
		"stroke-dasharray": "-"
	});
	paper.path("M71 151L120 199").attr({
		"stroke": "red",
		"stroke-width": 8
	});
	
	
</script>

</body>

</html> 
