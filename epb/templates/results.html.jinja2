<html>

<head>
	<style type="text/css">
		{{ render("results.css") }}
	</style>
	
	<script type="text/javascript">
		{{ render("app.js.jinja2") }}
	</script>
	<script type="text/javascript">
		var alignments = [
			{% for alignment, data in data.by_alignment() %}
				"{{ alignment.digest }}",
			{% endfor %}
		];
	
		domReady(function() {
			$.each(alignments, function(d) {
				$("alignment-" + d).click(function() {
					$('overlays').show();
					$('alignment-overlay-' + d).show();
				});
				$("alignment-overlay-close-" + d).click(function() {
					$('overlays').hide();
					$('alignment-overlay-' + d).hide();
				});
			});
		});
	</script>
</head>

<body>

<div id="overlays">
	{% for organism, data in data.by_organism() %}
	{% for alignment, data in data.by_alignment() %}
		<div id="alignment-overlay-{{ alignment.digest }}">
			<div class="actions">
				<a id="alignment-overlay-close-{{ alignment.digest }}" href="#close">Close popup</a>
			</div>
			
			<h1>{{ organism.database }} {{ organism.taxon }} {{ organism.extra }}</h1>
			<h1>{{ alignment.name }}</h1>
				
			{% for datum in data.items() %}
				{% for hsp in datum.hsps %}
					<div class="hsp">
						<h1>{{ datum.record.query }}</h1>
						<h2>{{ hsp.evalue }}</h2>
						<h2>{{ hsp.score }}</h2>
						<pre>{{ hsp.subject }}<br/>{{ hsp.match }}<br/>{{ hsp.query }}</pre>
						<p></p>
					</div>
				{% endfor %}
			{% endfor %}
		</div>
	{% endfor %}
	{% endfor %}
</div>

<figure id="taxonkey">
	<div class="plantae">Plantae</div>
	<div class="chromalveolate">Chromalveolate</div>
	<div class="excavate">Excavate</div>
	<div class="amoebozoa">Amoebozoa</div>
	<div class="rhizaria">Rhizaria</div>
	<div class="opisthokonta">Opisthokonta</div>
</figure>

<figure id="colorkey">
	<figcaption>Color key for alignment scores</figcaption>
	<div class="poor">&lt; 40</div>
	<div class="fair">40 &ndash; 50</div>
	<div class="okay">50 &ndash; 80</div>
	<div class="good">80 &ndash; 200</div>
	<div class="great">200 &le;</div>
</figure>

<div style="clear: both"></div>

<table>
	<thead>
		<tr>
			<th></th>
			<th class="sequences">
				<div class="name">
					{% for seq in sequences %}
						<div style="
							width: {{ seq.size | as_percent(input_width) }}">
							{{ seq.name }}
						</div>
					{% endfor %}
				</div>
				<div style="clear: both"></div>
				<div class="nt">
					{% for seq in sequences %}
						<div style="
							width: {{ seq.size | as_percent(input_width) }}">
							{{ seq.size }} nt
						</div>
					{% endfor %}
					<div style="clear: both"></div>
				</div>
			</th>
		</tr>
		<tr class="separator">
			<td>
			</td>
			<td class="hits"></td>
		</tr>
	</thead>
	<tbody>
		{% for organism, data in data.by_organism() %}
		<tr>
			<td class="organism {{ organism.taxon | lower }}">
				{{ organism.database }}<br/>
				{{ organism.taxon }}<br/>
				{{ organism.extra }}
			</td>
			<td class="hits">
				<div class="divider">
			
				{% for seq in sequences[0:-1] %}
					<div class="divider" style="
						left: {{ seq.size | as_percent(input_width) }}"
					>
				{% endfor %}
				
				<div class="hit_container" style="
					right: {{ sequences[:-1] | sum_attr('size') | as_percent(input_width) }}"
				>
					{% for alignment, data in data.by_alignment() %}
						<a id="alignment-{{ alignment.digest }}" href="#alignment-{{ alignment.digest }}">
						<div class="hit">
							<div class="stats" style="text-align: left">{{ alignment.evalue }} {{ alignment.name }}</div>
							{% for datum in data.items() %}
								<div class="graphic" style="
									width: {{ datum.record.width | as_percent(input_width) }};
									margin-left: {{ datum.record.offset | as_percent(input_width) }}"
								>
									{% for hsp in datum.hsps %}
										<div class="hsp_border {{ hsp.strength }}" style="
											margin-left: {{ hsp.start | as_percent(datum.record.width) }};
											width: {{ hsp.width | as_percent(datum.record.width) }}">
										</div>
									{% endfor %}
									<div class="hit_border" style="
										margin-left: {{ alignment.start | as_percent(datum.record.width) }};
										width: {{ alignment.width | as_percent(datum.record.width) }}">
									</div>
								</div>
							{% endfor %}
						</div>
						</a>
					{% endfor %}
				</div>
				
				{% for seq in sequences[0:-1] %}
					</div>
				{% endfor %}
				</div>
			</td>
		</tr>
		<tr class="separator">
			<td></td>
			<td class="hits"></td>
		</tr>
		{% endfor %}
	</tbody>
</table>
</body>

</html> 
