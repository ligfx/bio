<!DOCTYPE html>
<html lang="en">

<head>
	<style type="text/css">
		{{ render("results.css") }}
	</style>
	
	<script type="text/javascript" src="raphael-min.js"></script>
	<script type="text/javascript">
		{{ render("app.js.jinja2") }}
	</script>
	<script type="text/javascript">
		var alignments = [
			{% for organism, data in data.by_organism() %}
				{% for alignment, data in data.by_alignment() %}
					"{{ alignment.digest }}-{{ organism.id }}",
				{% endfor %}
			{% endfor %}
		];
	
		domReady(function() {
			$.each(alignments, function(d) {
				$("alignment-" + d).click(function() {
					$('overlays').show();
					$('alignment-overlay-' + d).show();
				});
				$("alignment-overlay-close-" + d).click(function() {
					$('overlays').hide();
					$('alignment-overlay-' + d).hide();
				});
			});
		});
	</script>
</head>

<body>

<div id="overlays">
	{% for organism, data in data.by_organism() %}
	{% for alignment, data in data.by_alignment() %}
		<div id="alignment-overlay-{{ alignment.digest }}-{{ organism.id }}">
			<div class="actions">
				<a id="alignment-overlay-close-{{ alignment.digest }}-{{ organism.id }}"
				   href="#close">Close popup</a>
			</div>
			
			<h1>{{ organism.database }} {{ organism.taxon }} {{ organism.extra }}</h1>
			<h1>{{ alignment.name }}</h1>
			
			{% for datum in data.items() %}
				{% for hsp in datum.hsps %}
					<div class="hsp" style="border: 1px solid #333; padding: 5px">
						<h1>Query sequence: {{ datum.record.query }}</h1>
						<h2>E-value: {{ hsp.evalue }}</h2>
						<h2>Score: {{ hsp.score }}</h2>
						<pre>Sbjct: {{ hsp.subject }}<br/>Match: {{ hsp.match }}<br/>Query: {{ hsp.query }}</pre>
						<p></p>
						<p>Query {{ datum.record.width }} nt: {{ hsp.start }} &ndash; {{ hsp.end }}</p>
						<div class="hsp_border {{ hsp.strength }}" style="
							width: {{ hsp.width | as_percent(datum.record.width) }};
							margin-left: {{ hsp.start | as_percent(datum.record.width) }};">
						</div>
						<div style="height: 5px; background-color: black"></div>
						
						<p>Subject {# alignment.length #} nt: {{ hsp.subject_start }} &ndash; {{ hsp.subject_end }}</p>
						<div class="hsp_border {{ hsp.strength }}" style="
							width: {# hsp.subject_width | as_percent(alignment.length) #};
							margin-left: {# hsp.subject_start | as_percent(alignment.length) #}">
						</div>
						<div style="height: 5px; background-color: black"></div>
						
						<div id="paper-{{alignment.digest}}-{{ organism.id }}-{{ datum.record.query }}"></div>
					</div>
				{% endfor %}
			{% endfor %}
		</div>
	{% endfor %}
	{% endfor %}
</div>

<figure id="taxonkey">
	<div class="plantae">Plantae</div>
	<div class="chromalveolate">Chromalveolate</div>
	<div class="excavate">Excavate</div>
	<div class="amoebozoa">Amoebozoa</div>
	<div class="rhizaria">Rhizaria</div>
	<div class="opisthokonta">Opisthokonta</div>
</figure>

<figure id="colorkey">
	<figcaption>Color key for alignment scores</figcaption>
	<div class="poor">&lt; 40</div>
	<div class="fair">40 &ndash; 50</div>
	<div class="okay">50 &ndash; 80</div>
	<div class="good">80 &ndash; 200</div>
	<div class="great">200 &le;</div>
</figure>

<div style="clear: both"></div>

<div class="organisms">

{% for organism, data in data.by_organism() %}
<section class="organism {{ organism.taxon | lower }}">
	<header>
		<div class="organismName">
			{{ organism.database }}<br/>
			{{ organism.taxon }}<br/>
			{{ organism.extra }}
		</div>
		<div class="sequences">
			{% for seq in sequences %}
				<div class="sequence" style="
					width: {{ seq.size | as_percent(input_width) }}">
					<div class="sequenceName">{{ seq.name }}</div>
					<div class="sequenceLength">{{ seq.size }} nt</div>
				</div>
			{% endfor %}
			<div style="clear: both"></div>
		</div>
	</header>

	<div class="divider">

		{% for seq in sequences[0:-1] %}
			<div class="divider" style="
				left: {{ seq.size | as_percent(input_width) }}"
			>
		{% endfor %}
	
		<div class="alignmentContainer" style="
			right: {{ sequences[:-1] | sum_attr('size') | as_percent(input_width) }}"
		>
			{% for alignment, data in data.by_alignment() %}
				<a id="alignment-{{ alignment.digest }}-{{ organism.id }}"
				   href="#alignment-{{ alignment.digest }}-{{ organism.id }}">
				<div class="alignment {{loop.cycle('odd', 'even') }}">
					
					<div class="alignmentName">
						<strong>{{ alignment.name }}</strong><br/>
						<em>{{ alignment.evalue }}</em>
					</div>
					
					<div class="alignmentGraphics">
						{% for datum in data.items() %}
							<div class="graphic" style="
								width: {{ datum.record.width | as_percent(input_width) }};
								margin-left: {{ datum.record.offset | as_percent(input_width) }}"
							>
								{% for hsp in datum.hsps %}
									<div class="hsp_border {{ hsp.strength }}" style="
										margin-left: {{ hsp.start | as_percent(datum.record.width) }};
										width: {{ hsp.width | as_percent(datum.record.width) }}">
									</div>
								{% endfor %}
							</div>
						{% endfor %}
					</div>
						
					<div style="clear: both"></div>
				</div>
				</a>
			{% endfor %}
		</div>
	
		{% for seq in sequences[0:-1] %}
			</div>
		{% endfor %}
	</div>

</section>
{% endfor %}

</div>

<script type="text/javascript">
	var paper = Raphael("paper-102620776a20dc866709038f2ade720e-test", 120, 200);
	
	paper.path("M71 0L120 0").attr({
		"stroke": "red",
		"stroke-width": 5
	});
	paper.path("M0 151L0 199").attr({
		"stroke": "red",
		"stroke-width": 5
	});
	paper.path("M71 0L71 200").attr({
		"stroke": "#ddd",
		"stroke-width": 2,
		"stroke-dasharray": "-"
	});
	paper.path("M0 151L120 151").attr({
		"stroke": "#ddd",
		"stroke-width": 2,
		"stroke-dasharray": "-"
	});
	paper.path("M71 151L120 199").attr({
		"stroke": "red",
		"stroke-width": 8
	});
	
	
</script>

</body>

</html> 
