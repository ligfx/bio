<html>

<head>
	<style type="text/css">
		body { width: 900px; font-size: 8px; font-family: Arial,sans; }
		body * { font-size: 10px; font-weight: bold;}
		.hit_border { border-bottom: 3px solid black;}
		.hit .stats { font-weight: strong; }
		.hit { padding-bottom: 1em;}
		.hsp_border { border-bottom: 4px solid; }
		
		.hsp_stat { font-weight: normal; display: none;}
		
		.hsp_border.great { border-color: red; }
		.hsp_border.good { border-color: fuchsia; }
		.hsp_border.okay { border-color: lime; }
		.hsp_border.fair { border-color: blue; }
		.hsp_border.poor { border-color: black; }
		
		.sequences > div > div {
			float: left;
		}
		
		figure { margin: 0; }
		
		#colorkey {
			text-align: center;
			width: 500px;
			margin-left: 50px;
			float: left;
		}
		#colorkey figcaption {
			font-size: 20px;
		}
		
		#colorkey .great { background-color: red; }
		#colorkey .good { background-color: fuchsia; }
		#colorkey .okay { background-color: lime; }
		#colorkey .fair { background-color: blue; }
		#colorkey .poor { background-color: black; }
		#colorkey div { float: left; color: white; font-size: 15px; width: 100px; font-weight: normal;}
		
		#taxonkey {
			float: left;
		}
		
		#taxonkey div {
			width: 150px;
			font-size: 15px;
			font-weight: bold;
			color: black;
			padding: 5px;
		}
		.plantae {
			background: green;
			background: rgba(0, 128, 0, 0.2);
		}
		.chromalveolate {
			background: orange;
			background: rgba(255, 165, 0, 0.2);
		}
		.excavate {
			background: yellow;
			background: rgba(255, 255, 0, 0.2);
		}
		.amoebozoa {
			background: purple;
			background: rgba(128, 0, 128, 0.2);
		}
		.rhizaria {
			background: blue;
			background: rgba(0, 0, 255, 0.2);
		}
		.opisthokonta {
			background: orchid;
			background: rgba(218, 112, 214, 0.2);
		}
		
		table { width: 100%; }
		table, table * { padding: 0; margin: 0; border-spacing: 0; border-collapse: collapse;}
		thead th {
			text-align: left;
		}
		tbody tr {
			margin-bottom: 1em;
		}
		.sequence, .nt {
			padding: 2px;
		}
		
		.sequence {
			border-left: 1px solid black;
		}
		.organism { background: #e5f2e5; border: 1px solid black; width: 200px; padding-left: 5px; margin-bottom: 1em; border-radius: 5px; -webkit-border-radius: 5px;}
		.hits { background: #b7c4e5; width: 700px; border: 1px solid black; padding-top: 2px; padding-bottom: 8px; margin-bottom: 1em;}
		.nt {
			background: red;
			border: 1px solid black;
			color: white;
			font-size: 14px;
			height: 1.5em;
			padding: 0;
			width: 100%;
		}
		.nt > div {
			font-size: 14px;
			font-weight: bold;
			border-left: 1px solid black;
			margin-left: -1px;
		}
		
		.divider {
			float: left;
			width: 100%;
			position: relative;
			border-left: 1px dashed #aaa;
			margin-left: -1px;
		}
		.hit_container {
			width: 100%;
			position: relative;
		}
		
		#overlays {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			z-index: 10;
			display: none;
			background: rgba(0, 0, 0, 0.5);
			
			font-size: 16px;
		}
		
		#overlays > div {
			height: 500px;
			display: none;
			background: white;
			margin: 20px;
			padding: 10px;
		}
		
		td.hits {
			overflow: hidden;
		}
		
		#overlays .actions {
			text-align: right;
		}
		
	</style>
	
	<script type="text/javascript">
		{{ render("jquery.js") }}
	</script>
	<script type="text/javascript">
		$(document).ready(function(){
			
			{% for alignment, data in data.by_alignment() %}
				$("#alignment-{{ alignment.digest }}").click(function(){
					$('#overlays').show();
					$("#alignment-overlay-{{ alignment.digest }}").show();
				})
				$("#alignment-overlay-close-{{ alignment.digest }}").click(function(){
					$('#overlays').hide();
					$("#alignment-overlay-{{ alignment.digest }}").hide();
				})
			{% endfor %}
		})
	</script>
</head>

<body>

<div id="overlays">
	{% for organism, data in data.by_organism() %}
	{% for alignment, data in data.by_alignment() %}
		<div id="alignment-overlay-{{ alignment.digest }}">
			<div class="actions">
				<a id="alignment-overlay-close-{{ alignment.digest }}" href="#close">Close popup</a>
			</div>
			
			<h1>{{ organism.database }} {{ organism.taxon }} {{ organism.extra }}</h1>
			<h1>{{ alignment.name }}</h1>
				
			{% for datum in data.items() %}
				{% for hsp in datum.hsps %}
					<div class="hsp">
						<h1>{{ datum.record.query }}</h1>
						<h2>{{ hsp.evalue }}</h2>
						<h2>{{ hsp.score }}</h2>
						<pre>{{ hsp.subject }}<br/>{{ hsp.match }}<br/>{{ hsp.query }}</pre>
						<p></p>
					</div>
				{% endfor %}
			{% endfor %}
		</div>
	{% endfor %}
	{% endfor %}
</div>

<figure id="taxonkey">
	<div class="plantae">Plantae</div>
	<div class="chromalveolate">Chromalveolate</div>
	<div class="excavate">Excavate</div>
	<div class="amoebozoa">Amoebozoa</div>
	<div class="rhizaria">Rhizaria</div>
	<div class="opisthokonta">Opisthokonta</div>
</figure>

<figure id="colorkey">
	<figcaption>Color key for alignment scores</figcaption>
	<div class="poor">&lt; 40</div>
	<div class="fair">40 &ndash; 50</div>
	<div class="okay">50 &ndash; 80</div>
	<div class="good">80 &ndash; 200</div>
	<div class="great">200 &le;</div>
</figure>

<div style="clear: both"></div>

<table>
	<thead>
		<tr>
			<th></th>
			<th class="sequences">
				<div class="name">
					{% for seq in sequences %}
						<div style="width: {{ seq.size | as_percent(input_width) }}">{{ seq.name }}</div>
					{% endfor %}
				</div>
				<div style="clear: both"></div>
				<div class="nt">
					{% for seq in sequences %}
						<div style="width: {{ seq.size | as_percent(input_width) }}">{{ seq.size }} nt</div>
					{% endfor %}
					<div style="clear: both"></div>
				</div>
			</th>
		</tr>
		<tr class="separator">
			<td>
			</td>
			<td class="hits"></td>
		</tr>
	</thead>
	<tbody>
		{% for organism, data in data.by_organism() %}
		<tr>
			<td class="organism {{ organism.taxon | lower }}">
				{{ organism.database }}<br/>
				{{ organism.taxon }}<br/>
				{{ organism.extra }}
			</td>
			<td class="hits">
					<div class="divider">
				
					{% for seq in sequences[0:-1] %}
						<div class="divider" style="left: {{ seq.size | as_percent(input_width) }}">
					{% endfor %}
				<div class="hit_container" style="right: {{ sequences[:-1] | sum_attr('size') | as_percent(input_width) }}">
					{% for alignment, data in data.by_alignment() %}
						<a id="alignment-{{ alignment.digest }}" href="#alignment-{{ alignment.digest }}">
						<div class="hit">
							<div class="stats" style="text-align: left">{{ alignment.evalue }} {{ alignment.name }}</div>
							{% for datum in data.items() %}
								<div class="graphic" style="width: {{ datum.record.width | as_percent(input_width) }}; margin-left: {{ datum.record.offset | as_percent(input_width) }}">
								{% for hsp in datum.hsps %}
									<div class="hsp_border {{ hsp.strength }}" style="margin-left: {{ hsp.start | as_percent(datum.record.width) }};
									width: {{ hsp.width | as_percent(datum.record.width) }}"></div>
								{% endfor %}
								<div class="hit_border" style="margin-left: {{ alignment.start | as_percent(datum.record.width) }}; width: {{ alignment.width | as_percent(datum.record.width) }}"></div>
								</div>
							{% endfor %}
						</div>
						</a>
					{% endfor %}
				</div>
				
				{% for seq in sequences[0:-1] %}
					</div>
				{% endfor %}
				</div>
			</td>
		</tr>
		<tr class="separator">
			<td></td>
			<td class="hits"></td>
		</tr>
		{% endfor %}
	</tbody>
</table>
</body>

</html> 
